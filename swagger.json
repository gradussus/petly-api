{
  "openapi": "3.0.1",
  "info": {
    "version": "0.1",
    "title": "Petly",
    "description": "Documentation for API: https://github.com/gradussus/petly-api"
  },
  "consumers": ["application.json"],
  "produces": ["application.json"],
  "servers": [{ "url": "https://petly-vxdt.onrender.com " }],
  "tags": [{ "name": "News", "description": "News enpoint" }],

  "paths": {
    "/news": {
      "get": {
        "tags": ["News"],
        "summary": "Get news",
        "requestBody ": {},
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application.json": {
                "schema": {
                  "$ref": "#/components/schemas/newsResponce"
                }
              }
            }
          }
        }
      }
    },
    "/friends": {
      "get": {
        "tags": ["Our friends"],
        "summary": "Get friends",
        "requestBody ": {},
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application.json": {
                "schema": {
                  "$ref": "#/components/schemas/friendsResponce"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "newsResponce": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "new`s title",
              "example": "Терміново: на Троєщині божевільна бабка спіймала кота із трьома очима, і ось що було далі..."
            },
            "url": {
              "type": "string",
              "description": "new`s url",
              "example": "https://ukr.media/animals/446243/"
            },
            "description": {
              "type": "string",
              "description": "new`s text",
              "example": "великий текст новини"
            },
            "date": {
              "type": "string",
              "description": "new`s date",
              "example": "2022-08-14"
            }
          }
        }
      },
      "friendsResponce": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "friend`s title",
              "example": "Притулок для бездомних тварин 'Бабатунда'"
            },
            "url": {
              "type": "string",
              "description": "friend`s url",
              "example": "https://dogcat.com.ua"
            },
            "addressUrl": {
              "type": "string",
              "description": "address",
              "example": "посилання на гугл карти"
            },
            "imageUrl": {
              "type": "string",
              "description": "logo",
              "example": "помилання на логотип"
            },
            "address": {
              "type": "string",
              "description": "адреса організації",
              "example": "Rostov, Rostovs`ka Oblast, Ukraine, 07372"
            },
            "work-days": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "isOpen": {
                    "type": "boolean"
                  },
                  "from": {
                    "type": "string",
                    "example": "11:00"
                  },
                  "to": {
                    "type": "string",
                    "example": "18:00"
                  }
                }
              }
            },
            "phone": {
              "type": "string",
              "example": "+380669379992"
            },
            "email": {
              "type": "string",
              "example": "canieatthatdog@kotopes.ua"
            }
          }
        }
      }
    }
  }
}
