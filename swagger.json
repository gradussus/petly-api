{
  "openapi": "3.0.1",
  "info": {
    "version": "0.1",
    "title": "Petly",
    "description": "Documentation for API: https://github.com/gradussus/petly-api"
  },
  "consumers": ["application.json"],
  "produces": ["application.json"],
  "servers": [{ "url": "https://petly-vxdt.onrender.com " }],
  "tags": [
    { "name": "News", "description": "News enpoint" },
    { "name": "Our friends", "description": "Our friends enpoint" },
    { "name": "Auth", "description": "Login, registration, logout, etc" }
  ],

  "paths": {
    "/news": {
      "get": {
        "tags": ["News"],
        "summary": "Get all news",
        "requestBody ": {},
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application.json": {
                "schema": {
                  "$ref": "#/components/schemas/findNewsResponce"
                }
              }
            }
          }
        }
      }
    },
    "/news/search/:qwery": {
      "get": {
        "tags": ["News"],
        "summary": "Get news by word in topic",
        "parameters": [
          {
            "in": "path",
            "name": "qwery",
            "required": true,
            "type": "string",
            "description": "search word"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application.json": {
                "schema": {
                  "$ref": "#/components/schemas/findNewsResponce"
                }
              }
            }
          }
        }
      }
    },
    "/friends": {
      "get": {
        "tags": ["Our friends"],
        "summary": "Get friends",
        "requestBody ": {},
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application.json": {
                "schema": {
                  "$ref": "#/components/schemas/friendsResponce"
                }
              }
            }
          }
        }
      }
    },
    "api/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registration new user",
        "requestBody": {
          "description": "Registration`s object",
          "required": true,
          "content": {
            "application.json": {
              "schema": {
                "$ref": "#/components/schemas/registrationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application.json": {
                "schema": {
                  "$ref": "#/components/schemas/registrationResponse"
                }
              }
            }
          },
          "409": {
            "description": "Provided email already exists",
            "content": {}
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          }
        }
      }
    },
    "api/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login user user",
        "requestBody": {
          "description": "Login`s object",
          "required": true,
          "content": {
            "application.json": {
              "schema": {
                "$ref": "#/components/schemas/loginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application.json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "users`s token",
                      "example": "тут буде токен"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (wrong email or password)",
            "content": {}
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "oneNewsResponce": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "new`s title",
            "example": "Терміново: на Троєщині божевільна бабка спіймала кота із трьома очима, і ось що було далі..."
          },
          "url": {
            "type": "string",
            "description": "new`s url",
            "example": "https://ukr.media/animals/446243/"
          },
          "description": {
            "type": "string",
            "description": "new`s text",
            "example": "великий текст новини"
          },
          "date": {
            "type": "string",
            "description": "new`s date",
            "example": "2022-08-14"
          }
        }
      },
      "findNewsResponce": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/oneNewsResponce"
        }
      },
      "friendsResponce": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "friend`s title",
              "example": "Притулок для бездомних тварин 'Бабатунда'"
            },
            "url": {
              "type": "string",
              "description": "friend`s url",
              "example": "https://dogcat.com.ua"
            },
            "addressUrl": {
              "type": "string",
              "description": "address",
              "example": "посилання на гугл карти"
            },
            "imageUrl": {
              "type": "string",
              "description": "logo",
              "example": "помилання на логотип"
            },
            "address": {
              "type": "string",
              "description": "адреса організації",
              "example": "Rostov, Rostovs`ka Oblast, Ukraine, 07372"
            },
            "work-days": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "isOpen": {
                    "type": "boolean"
                  },
                  "from": {
                    "type": "string",
                    "example": "11:00"
                  },
                  "to": {
                    "type": "string",
                    "example": "18:00"
                  }
                }
              }
            },
            "phone": {
              "type": "string",
              "example": "+380669379992"
            },
            "email": {
              "type": "string",
              "example": "canieatthatdog@kotopes.ua"
            }
          }
        }
      },
      "registrationRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "user`s name",
            "example": "Stepan Giga"
          },
          "email": {
            "type": "string",
            "description": "user`s email",
            "example": "gigaforever@giga.net.ua"
          },
          "password": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9а-яА-Я]+$",
            "description": "user`s password",
            "example": "min 7, max 32"
          },
          "city": {
            "type": "string",
            "description": "users`s city",
            "example": "Dnipro, Ukraine"
          },
          "phone": {
            "type": "string",
            "description": "users`s phone",
            "example": "+380991234567"
          }
        }
      },
      "registrationResponse": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "user`s name",
            "example": "Stepan Giga"
          },
          "email": {
            "type": "string",
            "description": "user`s email",
            "example": "gigaforever@giga.net.ua"
          },
          "city": {
            "type": "string",
            "description": "users`s city",
            "example": "Dnipro, Ukraine"
          },
          "phone": {
            "type": "string",
            "description": "users`s phone",
            "example": "+380991234567"
          }
        }
      },
      "loginRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "user`s email",
            "example": "gigaforever@giga.net.ua"
          },
          "password": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9а-яА-Я]+$",
            "description": "user`s password",
            "example": "min 7, max 32"
          }
        }
      }
    }
  }
}
